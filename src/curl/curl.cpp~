#include "includes.h"

void curl(Bundle &u, Pencil &omega, const Real xfac, const Real yfac, const Real zfac)
{
        for (size_t i=0;i<u.nx_;i++)
        {
//Compute omega_1 = d_2u_3-d_3u_2
                omega(i,0,0) = dely(u,yfac,i,2)-delz(u,zfac,i,1);
                
                //Compute omega_2 = d_3u_1-d_1u_3
                omega(i,0,1) = delz(u,zfac,i,0)-delx(u,xfac,i,2);
                        
                //Compute omega_3 = d_1u_2-d_2u_1
                omega(i,0,3) = delx(u,xfac,i,1)-dely(u,yfac,i,0);
       
        }

}

