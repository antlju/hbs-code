Real *linspace(Int size, Real start, Real end)
{
        Real dx = (end-start)/size;
        Real *axis = new Real[size];
        for (int i=0;i<size;i++)
        {
                axis[i] = start+dx*i;
                cout << axis[i] << endl;
        }
        return axis;
}


